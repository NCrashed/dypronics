extends layout

block body
  h1 Welcome

  - if (authenticated)
    form(action="logout", method="POST")
      button(type="submit") Log out
  - else
    h2 Log in
    form(action="login", method="POST")
      p User name:
        input(type="text", name="username")
      p Password:
        input(type="password", name="password")
      button(type="submit")
        p Login
